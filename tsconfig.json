{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@booking/*": ["./src/booking/*"],
      "@config/*": ["./src/config/*"],
      "@availability/*": ["./src/availability/*"],
      "@shared/*": ["./src/shared/*"],
      "@slot/*": ["./src/slot/*"]
    }
  },
  "exclude": ["node_modules"]
}
